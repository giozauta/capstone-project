<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>capstone project</title>
    <link rel="stylesheet" href="styles/styles.css">
    <script src="https://unpkg.com/sv443-joke-api@0.0.8/web/index.js"></script>

</head>
<body>
    <form action="/submit" method="get">
        <!--section for select category Type "Any or Custom"-->
        <label>
            <p>Select category:</p>
            <label>
                <input type="radio" id="Any" name="category" value="Any">
                Any
            </label></br>
            <label>
                <input type="radio" id="Custom" name="category" value="Custom">
                Custom : 
            </label>    
        </label>
        <!--section for select custom category-->
        <label for="Programming">Programming
            <input type="checkbox" class="categoryName" name="categoryName" value="Programming" >
        </label>  
        <label for="Miscellaneous">Miscellaneous
            <input type="checkbox" class="categoryName" name="categoryName" value="Miscellaneous" >
        </label>  
        <label for="Dark">Dark
            <input type="checkbox" class="categoryName" name="categoryName" value="Dark" >
        </label>  
        <label for="Pun">Pun
            <input type="checkbox" class="categoryName" name="categoryName" value="Pun" >
        </label>  
        <label for="Spooky">Spooky
            <input type="checkbox" class="categoryName" name="categoryName" value="Spooky" >
        </label>  
        <label for="Christmas">Christmas
            <input type="checkbox" class="categoryName" name="categoryName" value="Christmas" >
        </label>  
        <hr/>
        <!--section language-->
        <label>
            <p>Select language:</p>
            <select id="language" name="language">
                <option value="en">English</option>
                <option value="cs">Czech</option>
                <option value="de">German</option>
                <option value="es">Spanish</option>
                <option value="fr">French</option>
                <option value="pt">Portuguese</option>
            </select>
        </label>

        <hr/>
        <!--section format-->
        <label>
            <p>Select response format:</p>
            <label>
                <input type="radio" name="format" value="json" >
                default(json)
            </label>
            <label >
                <input type="radio" name="format" value="xml">
                xml
            </label>
            <label>
                <input type="radio" name="format" value="yaml">
                yaml
            </label>
            <label>
                <input type="radio" name="format" value="txt">
                plain text
            </label>
        </label>
        <hr/>
        <!--section type-->
        <label>
            <p>Select at least one joke type:</p>
            <label>
                <input type="checkbox" name="jokeType" value="single">
                single
            </label>
            <label>
                <input type="checkbox" name="jokeType" value="twopart">
                twopart
            </label>
        </label>
        <hr/>
        <!--section search string-->
        <label>
            <p>Search for a joke that contains this search string:</p>
            <textarea name="searchString" style="width:90%;resize: none;" cols="1" rows="1"></textarea>
        </label>
        <hr/>
        <!--section id range-->
        <label>
            <p>Search for a Joke in this ID range:</p>
            <label>
                (optional)
                From
                <input type="number" name="range" min="0" max="1367" value="0">
            </label>
            <label>
                To
                <input type="number" name="range" min="0" max="1367" value="1367">
            </label>
        </label>
        <hr/>
        <!--section amount jokes-->
        <label>
            <p>Amount of jokes:</p>
            <input type="number" name="amount" min="1"/>
        </label>
        <hr>
        <br>
        <button type="submit">Send Request</button>
    </form>
    <div class="joke_box">
        <%= locals.content %>
    </div>

    <script src="/js/script.js"></script>
</body>
</html>